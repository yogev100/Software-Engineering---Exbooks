<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E4E4E"
    android:foregroundTint="#FFFFFF"
    tools:context=".Screens.SearchScreen">

    <Button
        android:id="@+id/backToMenuFromSearch_Button"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:text="חזור לתפריט הראשי"
        android:textSize="18sp"
        app:backgroundTint="#E9967A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_scrollView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="564dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/exbooks" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="מיין לפי"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <CheckBox
        android:id="@+id/newCond_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:buttonTint="#E9967A"
        android:foregroundTint="#FFFFFF"
        android:text="תאריך אחרון"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.032" />

    <CheckBox
        android:id="@+id/usedCond_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:buttonTint="#E9967A"
        android:text='א"ב'
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newCond_checkBox"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.03" />

    <ScrollView
        android:id="@+id/search_scrollView"
        android:layout_width="383dp"
        android:layout_height="432dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCond_checkBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bookForm_Layout"
                android:layout_width="match_parent"
                android:layout_height="145dp">

                <Button
                    android:id="@+id/bookId_Button"
                    android:layout_width="91dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="8dp"
                    android:text="בחר"
                    android:textSize="18sp"
                    app:backgroundTint="#E9967A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.491" />

                <TextView
                    android:id="@+id/nameBookId_TextView"
                    android:layout_width="122dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="שם ספר"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/ImageBookId_ImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/categoryBookId_TextView"
                    android:layout_width="154dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:text="קטגוריה -קטגוריית הספר"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/ImageBookId_ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/nameBookId_TextView" />

                <TextView
                    android:id="@+id/authorBookId_TextView"
                    android:layout_width="154dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:text="סופר - כותב הספר"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/ImageBookId_ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/categoryBookId_TextView" />

                <TextView
                    android:id="@+id/conditionBookId_TextView"
                    android:layout_width="154dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:text="מצב הספר - מצב הספר"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/ImageBookId_ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/authorBookId_TextView" />

                <TextView
                    android:id="@+id/cityBookId_TextView"
                    android:layout_width="154dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:text="עיר - עיר הבעלים"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/ImageBookId_ImageView"
                    app:layout_constraintTop_toBottomOf="@+id/conditionBookId_TextView" />

                <ImageView
                    android:id="@+id/ImageBookId_ImageView"
                    android:layout_width="95dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
