<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.exbooks">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Screens.MaybeMatch"></activity>
        <activity android:name=".Screens.NotificationScreen" />
        <activity android:name=".Screens.SearchScreen" />
        <activity android:name=".Screens.CustomerMenu" />
        <activity android:name=".Screens.RegisterScreen" />
        <activity android:name=".Screens.ForgetPasswordScreen" />
        <activity android:name=".Screens.SearchResultScreen" />
        <activity android:name=".Screens.NewManager" />
        <activity android:name=".Screens.ManagerMenu" />
        <activity android:name=".Screens.EventsScreen" />
        <activity android:name=".Screens.ProfileScreen" />
        <activity android:name=".Screens.UploadScreen" />
        <activity android:name=".Screens.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>